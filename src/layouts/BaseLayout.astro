---
// Base HTML shell and global styles
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
  description?: string;
  showNav?: boolean;
}

const {
  title,
  description = 'A comprehensive, beautifully designed interactive learning platform for AI/ML',
  showNav = true
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL('/ai-decoded/og-image.png', Astro.site); // Assuming an OG image exists or will exist
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO -->
    <title>{title} | AI Decoded</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={`${title} | AI Decoded`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={`${title} | AI Decoded`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <script is:inline>
      // Prevent FOUC: apply dark mode before paint
      (function() {
        var theme = localStorage.getItem('theme');
        if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body>
    {showNav && <Navigation />}

    <slot />

    <script>
      // Initialize all interactive components
      import { initializeAllQuizzes } from '../scripts/quiz';
      import { initializeAllReveals } from '../scripts/reveal';
      import { initializeAllDiagrams, enableAutoPlay } from '../scripts/diagrams';

      if (typeof document !== 'undefined') {
        document.addEventListener('DOMContentLoaded', () => {
          initializeAllQuizzes();
          initializeAllReveals();
          initializeAllDiagrams();
          enableAutoPlay();
        });
      }
    </script>
  </body>
</html>
