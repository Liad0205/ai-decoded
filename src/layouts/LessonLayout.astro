---
// Professional Lesson Layout - Responsive with collapsible sidebar
import BaseLayout from './BaseLayout.astro';
import Sidebar from '../components/Sidebar.astro';
import LucideIcon from '../components/LucideIcon.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import { Icon } from '../components/Icon';
import { getNextLesson, getPreviousLesson, type Module, type Lesson } from '../content/modules';

interface Props {
  module: Module;
  lesson: Lesson;
}

const { module, lesson } = Astro.props;

const next = getNextLesson(module.slug, lesson.slug);
const prev = getPreviousLesson(module.slug, lesson.slug);

const title = `${lesson.title} - Module ${module.number}`;
const description = lesson.description;
---

<BaseLayout title={title} description={description} showNav={false}>
  <div class="flex min-h-screen bg-[hsl(var(--background))]">
    <!-- Mobile backdrop -->
    <div
      class="fixed inset-0 z-30 bg-black/50 opacity-0 pointer-events-none transition-opacity duration-300"
      data-sidebar-backdrop
    ></div>

    <Sidebar currentModuleSlug={module.slug} currentLessonSlug={lesson.slug} />

    <main class="flex-1 min-w-0 px-4 sm:px-6 lg:px-12 py-6 lg:py-8 max-w-6xl mx-auto custom-scrollbar">
      <!-- Mobile / collapsed-desktop header -->
      <div class="flex items-center gap-3 mb-6 lg:mb-8">
        <button
          type="button"
          class="sidebar-open-btn p-2 rounded-lg border border-[hsl(var(--border))] bg-[hsl(var(--card))] text-[hsl(var(--foreground))] hover:bg-[hsl(var(--muted))] transition-colors lg:hidden"
          data-sidebar-open
          aria-label="Open sidebar"
        >
          <LucideIcon name="Menu" size={20} />
        </button>

        <!-- Fixed floating restore button (desktop collapsed only) -->
        <button
          type="button"
          class="sidebar-floating-btn fixed left-4 top-1/2 -translate-y-1/2 z-30 hidden p-2 rounded-lg border border-[hsl(var(--border))] bg-[hsl(var(--card))] text-[hsl(var(--muted-foreground))] hover:bg-[hsl(var(--muted))] hover:text-[hsl(var(--foreground))] shadow-md transition-colors"
          data-sidebar-open
          aria-label="Open sidebar"
        >
          <LucideIcon name="PanelLeftOpen" size={20} />
        </button>

        <!-- Breadcrumbs -->
        <nav class="flex-1 min-w-0" aria-label="Breadcrumb">
          <ol class="flex items-center gap-1.5 sm:gap-2 text-sm text-[hsl(var(--muted-foreground))]">
            <li class="hidden sm:block">
              <a href={import.meta.env.BASE_URL} class="hover:text-[hsl(var(--primary))] transition-colors flex items-center gap-1">
                <LucideIcon name="House" size={14} />
                <span>Home</span>
              </a>
            </li>
            <li class="hidden sm:block"><LucideIcon name="ChevronRight" size={14} /></li>
            <li>
              <a href={`${import.meta.env.BASE_URL}${module.slug}`} class="hover:text-[hsl(var(--primary))] transition-colors truncate">
                {module.title}
              </a>
            </li>
            <li><LucideIcon name="ChevronRight" size={14} /></li>
            <li class="text-[hsl(var(--foreground))] font-medium truncate max-w-[200px] sm:max-w-xs" title={lesson.title}>
              {lesson.title}
            </li>
          </ol>
        </nav>
      </div>

      <!-- Lesson Header Card -->
      <Card variant="elevated" className="mb-8 sm:mb-12 overflow-hidden">
        <div class="p-5 sm:p-8 lg:p-12">
          <div class="flex flex-col sm:flex-row items-start gap-4 sm:gap-6 mb-6">
            <div class="flex-shrink-0 w-12 h-12 sm:w-16 sm:h-16 rounded-2xl bg-gradient-to-br from-[hsl(var(--primary))] to-[hsl(var(--primary))]/70 flex items-center justify-center shadow-lg">
              <Icon name="BookOpen" className="w-6 h-6 sm:w-8 sm:h-8 text-white" client:load />
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex flex-wrap items-center gap-2 sm:gap-3 mb-3 sm:mb-4">
                <span class="inline-flex items-center gap-2 px-3 sm:px-4 py-1 sm:py-1.5 bg-[hsl(var(--primary))]/10 text-[hsl(var(--primary))] text-xs sm:text-sm font-semibold rounded-full border border-[hsl(var(--primary))]/20">
                  Module {module.number}
                </span>
                <span class="text-xs sm:text-sm text-[hsl(var(--muted-foreground))]">{module.title}</span>
              </div>
              <h1 class="text-2xl sm:text-4xl lg:text-5xl font-bold text-[hsl(var(--foreground))] tracking-tight leading-tight mb-3 sm:mb-4">
                {lesson.title}
              </h1>
              {lesson.description && (
                <p class="text-base sm:text-lg text-[hsl(var(--muted-foreground))] leading-relaxed">
                  {lesson.description}
                </p>
              )}
            </div>
          </div>

          <!-- Lesson Meta -->
          <div class="flex flex-wrap items-center gap-3 sm:gap-4 pt-4 sm:pt-6 border-t border-[hsl(var(--border))]">
            <div class="flex items-center gap-2 text-xs sm:text-sm text-[hsl(var(--muted-foreground))]">
              <Icon name="Clock" className="w-4 h-4" client:load />
              <span>~15 min read</span>
            </div>
            <div class="flex items-center gap-2 text-xs sm:text-sm text-[hsl(var(--muted-foreground))]">
              <Icon name="Target" className="w-4 h-4" client:load />
              <span>Technical Depth: Advanced</span>
            </div>
            <div class="hidden sm:flex items-center gap-2 text-xs sm:text-sm text-[hsl(var(--muted-foreground))]">
              <Icon name="Zap" className="w-4 h-4" client:load />
              <span>Interactive Elements</span>
            </div>
          </div>
        </div>
      </Card>

      <!-- Lesson Content -->
      <div class="space-y-12">
        <article class="lesson-content">
          <slot />
        </article>
      </div>

      <!-- Completion Section -->
      <div class="mt-16 sm:mt-20 mb-8 sm:mb-12">
        <Card variant="elevated" className="overflow-hidden">
          <div class="p-5 sm:p-8 bg-gradient-to-br from-[hsl(var(--card))] to-[hsl(var(--muted))]">
            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 sm:gap-6">
              <div class="flex items-start gap-3 sm:gap-4">
                <div class="flex-shrink-0 w-11 h-11 sm:w-14 sm:h-14 rounded-xl bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center shadow-lg">
                  <Icon name="CircleCheck" className="w-6 h-6 sm:w-7 sm:h-7 text-white" client:load />
                </div>
                <div>
                  <h3 class="font-semibold text-lg sm:text-xl mb-1 sm:mb-2">Completed this lesson?</h3>
                  <p class="text-xs sm:text-sm text-[hsl(var(--muted-foreground))]">Mark your progress and continue your learning journey</p>
                </div>
              </div>
              <button
                type="button"
                class="mark-complete-btn w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-xl hover:from-green-600 hover:to-emerald-700 transition-all font-semibold shadow-lg hover:shadow-xl flex items-center justify-center gap-3 whitespace-nowrap"
                data-module-id={module.id}
                data-lesson-id={lesson.id}
              >
                <Icon name="Check" className="w-5 h-5" client:load />
                <span data-complete-text>Mark Complete</span>
              </button>
            </div>
          </div>
        </Card>
      </div>

      <!-- Navigation -->
      <nav class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6 mb-8 sm:mb-12" aria-label="Lesson navigation">
        {prev ? (
          <a
            href={`${import.meta.env.BASE_URL}${prev.module.slug}/${prev.lesson.slug}`}
            class="group"
          >
            <Card variant="elevated" className="h-full hover:shadow-xl transition-all">
              <div class="p-4 sm:p-6 flex items-center gap-3 sm:gap-4">
                <div class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-[hsl(var(--muted))] flex items-center justify-center group-hover:bg-[hsl(var(--primary))] transition-colors">
                  <Icon name="ChevronLeft" className="w-5 h-5 sm:w-6 sm:h-6 group-hover:text-white transition-colors" client:load />
                </div>
                <div class="flex-1 min-w-0">
                  <div class="text-xs text-[hsl(var(--muted-foreground))] mb-1 font-medium uppercase tracking-wide">Previous</div>
                  <div class="text-sm sm:text-base font-semibold text-[hsl(var(--foreground))] group-hover:text-[hsl(var(--primary))] transition-colors line-clamp-2">
                    {prev.lesson.title}
                  </div>
                </div>
              </div>
            </Card>
          </a>
        ) : (
          <div></div>
        )}

        {next ? (
          <a
            href={`${import.meta.env.BASE_URL}${next.module.slug}/${next.lesson.slug}`}
            class="group"
          >
            <Card variant="elevated" className="h-full hover:shadow-xl transition-all">
              <div class="p-4 sm:p-6 flex items-center gap-3 sm:gap-4 justify-end">
                <div class="flex-1 min-w-0 text-right">
                  <div class="text-xs text-[hsl(var(--muted-foreground))] mb-1 font-medium uppercase tracking-wide">Next</div>
                  <div class="text-sm sm:text-base font-semibold text-[hsl(var(--foreground))] group-hover:text-[hsl(var(--primary))] transition-colors line-clamp-2">
                    {next.lesson.title}
                  </div>
                </div>
                <div class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-[hsl(var(--muted))] flex items-center justify-center group-hover:bg-[hsl(var(--primary))] transition-colors">
                  <Icon name="ChevronRight" className="w-5 h-5 sm:w-6 sm:h-6 group-hover:text-white transition-colors" client:load />
                </div>
              </div>
            </Card>
          </a>
        ) : (
          <div></div>
        )}
      </nav>
    </main>
  </div>
</BaseLayout>

<style>
  /* Show open button on desktop when sidebar collapsed */
  @media (min-width: 1024px) {
    .sidebar-open-btn {
      display: none;
    }
    .sidebar-open-btn[data-show-desktop] {
      display: flex;
    }
    .sidebar-floating-btn[data-show-desktop] {
      display: flex;
    }
  }
</style>

<script>
  import { isLessonCompleted, markLessonComplete, markLessonIncomplete } from '../scripts/progress';

  if (typeof document !== 'undefined') {
    const completeBtn = document.querySelector('.mark-complete-btn');

    if (completeBtn) {
      const moduleId = completeBtn.getAttribute('data-module-id');
      const lessonId = completeBtn.getAttribute('data-lesson-id');
      const completeText = completeBtn.querySelector('[data-complete-text]');

      if (moduleId && lessonId && completeText) {
        function updateButtonState() {
          const completed = isLessonCompleted(moduleId, lessonId);

          if (completed) {
            completeBtn.classList.remove('from-green-500', 'to-emerald-600', 'hover:from-green-600', 'hover:to-emerald-700');
            completeBtn.classList.add('from-slate-400', 'to-slate-500');
            completeText.textContent = 'Completed';
          } else {
            completeBtn.classList.remove('from-slate-400', 'to-slate-500');
            completeBtn.classList.add('from-green-500', 'to-emerald-600', 'hover:from-green-600', 'hover:to-emerald-700');
            completeText.textContent = 'Mark Complete';
          }
        }

        updateButtonState();

        completeBtn.addEventListener('click', () => {
          const completed = isLessonCompleted(moduleId, lessonId);
          if (completed) {
            markLessonIncomplete(moduleId, lessonId);
          } else {
            markLessonComplete(moduleId, lessonId);
          }
          updateButtonState();
        });

        window.addEventListener('progressUpdated', updateButtonState);
      }
    }
  }
</script>
