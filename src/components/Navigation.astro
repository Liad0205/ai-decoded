---
// Top navigation bar
import ThemeToggle from './ThemeToggle.astro';
---

<nav class="bg-[hsl(var(--card))] border-b border-[hsl(var(--border))] px-6 py-4">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <a href={import.meta.env.BASE_URL} class="text-lg font-bold text-[hsl(var(--foreground))] hover:text-[hsl(var(--primary))] transition-smooth">
        AI Decoded
      </a>
    </div>

    <div class="flex items-center gap-6">
      {/* Overall course progress */}
      <div class="flex items-center gap-3">
        <span class="text-sm text-[hsl(var(--muted-foreground))]">Course Progress:</span>
        <div class="flex items-center gap-2">
          <div class="w-32 h-2 bg-[hsl(var(--muted))] rounded-full overflow-hidden">
            <div
              class="h-full bg-gradient-to-r from-[hsl(var(--primary))] to-[hsl(var(--primary))]/80 rounded-full transition-all duration-500 ease-out"
              style="width: 0%"
              data-course-progress-bar
            >
            </div>
          </div>
          <span class="text-sm font-semibold text-[hsl(var(--primary))] min-w-[3rem]" data-course-progress-label>
            0%
          </span>
        </div>
      </div>

      {/* Theme toggle */}
      <ThemeToggle />

      {/* Reset progress button (dev tool) */}
      <button
        type="button"
        class="text-sm text-[hsl(var(--muted-foreground))] hover:text-[hsl(var(--foreground))] transition-smooth"
        data-reset-progress
        title="Reset all progress"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
      </button>
    </div>
  </div>
</nav>

<script>
  import { getCourseProgress, resetProgress } from '../scripts/progress';
  import { getTotalLessons } from '../content/modules';

  const totalLessons = getTotalLessons();

  if (typeof document !== 'undefined') {
    function updateCourseProgress() {
      const progressBar = document.querySelector('[data-course-progress-bar]') as HTMLElement;
      const progressLabel = document.querySelector('[data-course-progress-label]');

      if (progressBar && progressLabel) {
        const percentage = getCourseProgress(totalLessons);
        progressBar.style.width = `${percentage}%`;
        progressLabel.textContent = `${percentage}%`;
      }
    }

    // Update on page load
    updateCourseProgress();

    // Update when progress changes
    window.addEventListener('progressUpdated', updateCourseProgress);

    // Reset progress handler
    const resetButton = document.querySelector('[data-reset-progress]');
    if (resetButton) {
      resetButton.addEventListener('click', () => {
        if (confirm('Are you sure you want to reset all progress? This cannot be undone.')) {
          resetProgress();
        }
      });
    }
  }
</script>
